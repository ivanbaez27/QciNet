<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">

  <ImageView
      android:id="@+id/ivleon"
      android:layout_width="match_parent"
      android:layout_height="330dp"
      app:srcCompat="@mipmap/cucei"
      />

    <TextView
        android:id="@+id/tvLeyenda"
        android:text="@string/leyenda"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingTop="20dp"
        style="@style/viewCustom"
        android:textColor="@color/color_gris_logo"
        />
    <EditText
        android:id="@+id/etUser"
        style="@style/viewCustom"
        android:hint="@string/codigo"
        android:inputType="number"
        android:paddingHorizontal="10dp"
        android:drawableLeft="@drawable/user"
        android:drawablePadding="14dp"
        android:layout_marginTop="8dp"
        android:paddingTop="15dp"/>
    <EditText
        android:id="@+id/etPassword"
        style="@style/viewCustom"
        android:hint="@string/nip"
        android:inputType="textPassword"
        android:paddingTop="15dp"
        android:paddingHorizontal="10dp"
        android:drawableLeft="@drawable/nip"
        android:drawablePadding="14dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/btnLogin"
        style="@style/viewCustom"
        android:text="@string/iniciaSesion"
        android:textSize="20sp"
        android:layout_height="wrap_content"
        android:paddingTop="7dp"
        android:layout_marginTop="20dp"
        android:paddingBottom="7dp"
        android:textAlignment="center"
        android:background="@color/color_gris_logo"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:onClick="login"
      />


  </LinearLayout>